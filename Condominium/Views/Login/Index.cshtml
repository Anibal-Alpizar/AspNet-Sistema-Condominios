@model Infraestructure.Model.USUARIO

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .container {
        background: #393944;
    }

    .card {
        background: white;
        border-radius: 1rem;
    }

    .img-fluid {
        border-radius: 1rem 0 0 1rem;
    }

    body {
        background: #393944;
    }


    form {
        background: red;
    }
</style>


@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()
    <section class="vh-100" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://www.revistadeck.com/sitio/wp-content/uploads/jardines_verticales-3.jpg"
                                     alt="login form" class="img-fluid" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form>
                                        <div class="d-flex align-items-center mb-3 pb-1" style="margin-top: 5px;">
                                            <a class="navbar-brand ps-3" href="/" style="color: #f5a442; font-size: 1.3rem;">
                                                <i class="fas fa-leaf me-2"></i>
                                                GreenConnect
                                            </a>
                                        </div>
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Bienvenidos a Condominios Rio Sur. Inicie Seción con su cuenta</h5>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="CORREO">
                                                <i class="fa-solid fa-envelope"></i>
                                                Correo
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.CORREO, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.CORREO, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="CONTRASENA">
                                                <i class="fa-solid fa-lock"></i>
                                                Contraseña
                                            </label>
                                            <div class="col-md-10">
                                                @Html.PasswordFor(model => model.CONTRASENA, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CONTRASENA, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="pt-1 mb-4">
                                            @*<button class="btn btn-dark btn-lg btn-block" type="button">Login</button>*@
                                            <button type="submit" class="btn btn-dark btn-lg btn-block"> Login</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('form').submit(function (e) {
            e.preventDefault();
            var correo = $('input[name="CORREO"]').val();
            var contrasena = $('input[name="CONTRASENA"]').val();
            var usuario = {
                correo: correo,
                contrasena: contrasena
            };
            document.cookie = "usuario=" + correo + "; path=/;";
            this.submit();
        });
    </script>


}
