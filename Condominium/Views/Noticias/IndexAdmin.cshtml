@model IEnumerable<Infraestructure.Model.NOTICIA>

@{
    ViewBag.Title = "IndexAdmin";
}




<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h2 class="text-center mb-4">Noticias</h2>
            @*<div class="input-group mb-3">
                    @Html.TextBox("filtro", "", new { @class = "form-control", placeholder = "Buscar por tipo de noticia..." })
                    <button type="button" id="btnBuscar" class="btn btn-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>*@
            <table class="table table-striped">
                <thead>
                    <tr>
                        @*<th scope="col">ID</th>*@
                        <th scope="col">Tipo de noticia</th>
                        <th scope="col">Título</th>
                        <th scope="col">Contenido</th>
                        <th scope="col">Fecha de publicación</th>
                        <th scope="col" class="text-right">
                            <a href="@Url.Action("Create", "Noticias")" class="btn btn-success"><i class="fas fa-plus"></i></a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            @* <th scope="row">@item.ID_NOTICIA</th>*@
                            <td>@item.TIPO_NOTICIA.TIPO_NOTICIA_INFO</td>
                            <td>@item.TITULO</td>
                            <td>@item.CONTENIDO</td>
                            <td>@item.FECHA_PUBLICACION</td>
                            <td>
                                <div class="d-flex justify-content-center mb-2">

                                    <a href="@Url.Action("Edit", "Noticias", new { id = item.ID_NOTICIA })" class="btn btn-primary btn-sm mx-1"><i class="fas fa-pencil-alt"></i> </a>
                                    <a href="@Url.Action("Index", "Home", new { id = item.ID_NOTICIA })" class="btn-info btn-sm mx-1"><i class="fas fa-eye"></i> </a>
                                    <a href="@Url.Action("Delete", "Noticia", new { id = item.ID_NOTICIA })" class="btn btn-danger btn-sm mx-1"><i class="fas fa-trash"></i> </a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>