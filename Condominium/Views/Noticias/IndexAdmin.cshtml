@model IEnumerable<Infraestructure.Model.NOTICIA>

@{
    ViewBag.Title = "IndexAdmin";
}

<h2>IndexAdmin</h2>

<p>
    <a href="@Url.Action("Create", "Noticia")" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
</p>

<style>
    .card.my-4 {
        background-color: #f8f9fa;
        border: 1px solid #e2e3e5;
        border-radius: 0.25rem;
    }

        .card.my-4 .card-header {
            background-color: #e9ecef;
            border-bottom: 1px solid #e2e3e5;
            font-weight: 500;
        }

        .card.my-4 .card-body {
            padding: 1rem;
        }

        .card.my-4 .input-group {
            margin-bottom: 0;
        }

    .btn-secondary {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            color: #fff;
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>

<div class="row">
    <div class="col-md-8">
        <div class="table-responsive h-100">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID_NOTICIA)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TIPO_NOTICIA.TIPO_NOTICIA_INFO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TITULO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CONTENIDO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FECHA_PUBLICACION)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID_NOTICIA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TIPO_NOTICIA.TIPO_NOTICIA_INFO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TITULO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CONTENIDO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FECHA_PUBLICACION)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Noticia", new { id = item.ID_NOTICIA })" class="btn btn-primary mx-1"><i class="fas fa-pencil-alt"></i> Editar</a>
                                <a href="@Url.Action("Details", "Noticia", new { id = item.ID_NOTICIA })" class="btn btn-info mx-1"><i class="fas fa-eye"></i> Detalles</a>
                                <a href="@Url.Action("Delete", "Noticia", new { id = item.ID_NOTICIA })" class="btn btn-danger mx-1" style="background-color: #dc3545;"><i class="fas fa-trash"></i> Eliminar</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card my-4">
            <h5 class="card-header bg-primary text-white">Buscar por nombre de usuario</h5>
            <div class="card-body d-flex justify-content-center">
                <div class="input-group">
                    @Html.TextBox("filtro", "", new { @class = "form-control" })
                    <button type="button" id="btnBuscar" class="btn btn-secondary">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>