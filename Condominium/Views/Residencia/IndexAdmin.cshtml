@model IEnumerable<Infraestructure.Model.RESIDENCIA>

@{
    ViewBag.Title = "IndexAdmin";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Residencias</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Crear Residencia
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>N° Residencia</th>
                <th>Cantidad Personas</th>
                <th>Cantidad Vehiculos</th>
                <th>Estado</th>
                <th>Usuario</th>
                <th>Fecha Ocupación</th>

                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NUMERO_RESIDENCIA)</td>
                    <td>@Html.DisplayFor(modelItem => item.CANTIDAD_PERSONAS)</td>
                    <td>@Html.DisplayFor(modelItem => item.CANTIDAD_CARROS)</td>
                    <td>@Html.DisplayFor(modelItem => item.ESTADO_RESIDENCIA.ESTADO_RESIDENCIA1)</td>
                    <td>@Html.DisplayFor(modelItem => item.USUARIO.NOMBRE)</td>
                    <td>@Html.DisplayFor(modelItem => item.ANIO_INICIO)</td>
                    <td>
                        <div class="d-flex justify-content-center mb-3">
                            <a href="@Url.Action("EditEstado", "Residencia", new { id = item.ID_RESIDENCIA })" class="btn @(item.ID_ESTADO_RESIDENCIA == 1 ? "btn-success" : "btn-warning") btn-sm">
                                <i class="fas @(item.ID_ESTADO_RESIDENCIA == 1 ? "fa-check-circle" : "fa-undo-alt") me-2"></i>@(item.ID_ESTADO_RESIDENCIA == 1 ? "Cerrar Ocupación" : "Reabrir Ocupación")
                            </a>
                            <a href="@Url.Action("Edit", "Residencia", new { id = item.ID_RESIDENCIA })" class="btn btn-primary btn-sm mx-1"><i class="fas fa-pencil-alt"></i> </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>