@model Infraestructure.Model.RESIDENCIA
@{
    ViewBag.Title = "Modificar Residencias";
}
<style>
    a {
        text-decoration: none;
    }
</style>


<div class="container">
    <h1 class="text-center mb-4">@ViewBag.Title</h1>
    @using (Html.BeginForm("Save", "Residencia", FormMethod.Post, new { enctype = "multipart/form-data", @class = "col-md-8 offset-md-2" }))
    {
        @Html.AntiForgeryToken()
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="text-center">Editar Residencias</h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.ID_RESIDENCIA)
                                </div>

                                <div class="form-group mb-4 position-relative d-flex align-items-center" style="padding-right: 30px;" data-toggle="modal" data-target="#exampleModal">
                                    <label for="ID_USUARIO" style="color: rgb(39, 58, 93)">
                                        N° Residencia
                                    </label>
                                    @Html.DropDownListFor(model => model.ID_USUARIO, null, htmlAttributes: new { @class = "form-control" })
                                    <a href="#" class="d-flex align-items-center justify-content-center position-absolute end-0 top-50 translate-middle-y text-success" style="right: -20px; margin-bottom: 3px; width: 30px; height: 30px; border-radius: 50%;">
                                        <span style="font-size: 1.2rem;">  <strong>+</strong></span>
                                    </a>
                                </div>

                                <div class="form-group mb-4 position-relative d-flex align-items-center" style="padding-right: 30px;" data-toggle="modal" data-target="#exampleModal">
                                   
                                    @Html.HiddenFor(model => model.ID_ESTADO_RESIDENCIA, null)
                                    <a href="#" class="d-flex align-items-center justify-content-center position-absolute end-0 top-50 translate-middle-y text-success" style="right: -20px; margin-bottom: 3px; width: 30px; height: 30px; border-radius: 50%;" onclick="mostrarAdvertencia()">
                                       
                                    </a>
                                </div>

                                <div class="form-group mb-4">
                                    <label class="form-label" for="NUMERO_RESIDENCIA">
                                        <i class="fas fa-pencil-alt"></i> N° Residencia
                                    </label>
                                    @Html.EditorFor(model => model.NUMERO_RESIDENCIA, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NUMERO_RESIDENCIA, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-4">
                                    <label class="form-label" for="CANTIDAD_PERSONAS">
                                        <i class="fas fa-pencil-alt"></i> Cantidad de Personas
                                    </label>
                                    @Html.EditorFor(model => model.CANTIDAD_PERSONAS, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CANTIDAD_PERSONAS, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-4">
                                    <label class="form-label" for="CANTIDAD_CARROS">
                                        <i class="fas fa-pencil-alt"></i> Cantidad de Carros
                                    </label>
                                    @Html.EditorFor(model => model.CANTIDAD_CARROS, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CANTIDAD_CARROS, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-4">
                                    <label for="FECHA_CREACION" style="color: rgb(39, 58, 93)">

                                    </label>
                                    @Html.EditorFor(model => model.ANIO_INICIO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ANIO_INICIO, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary mr-2">Guardar</button>
                                    <a href="@Url.Action("IndexAdmin", "Residencia")" class="btn btn-danger">Cancelar</a>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>