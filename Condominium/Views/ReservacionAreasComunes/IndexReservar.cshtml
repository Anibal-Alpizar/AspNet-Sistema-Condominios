@model IEnumerable<Infraestructure.Model.RESERVA_AREA_COMUN>

@{
    ViewBag.Title = "IndexReservar";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Reservación de Áreas </h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Crear Reserva
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Área</th>
                <th>Fecha Creación</th>
                <th>Estado</th>
                <th>Usuario</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.COMENTARIOS)</td>
                    <td>@Html.DisplayFor(modelItem => item.AREA_COMUN.AREA_COMUN1)</td>
                    <td>@Html.DisplayFor(modelItem => item.FECHA_RESERVA)</td>
                    <td>@Html.DisplayFor(modelItem => item.ESTADO_RESERVACION.ESTADO_RESERVACION1)</td>
                    <td>@Html.DisplayFor(modelItem => item.USUARIO.NOMBRE)</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>