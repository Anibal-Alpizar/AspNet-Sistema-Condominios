@model Infraestructure.Model.GESTION_PLANES_COBRO

@{
    ViewBag.Title = "Modificar Planes de Cobro";
}

<style>
    .card-header {
        background-color: rgb(39, 58, 93);
        color: white;
        border-bottom: 1px solid #dee2e6;
        padding: 10px 15px;

    }
</style>

<div class="container">
    <h1 class="text-center mb-4">@ViewBag.Title</h1>
    @using (Html.BeginForm("Save", "PlanCobro", FormMethod.Post, new { enctype = "multipart/form-data", @class = "row g-3" }))
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="border p-3 rounded">
                        <div class="card-header">
                            <h5 class="text-center">Editar Plan de cobro</h5>
                        </div>
                        <div class="mb-3">
                            <label for="ID_USUARIO" class="form-label">
                                <i class="fas fa-user" style="color: rgb(39, 58, 93)"></i>
                                Seleccionar usuario
                            </label>
                            @Html.DropDownListFor(model => model.ID_USUARIO, null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="ID_ESTADO_DEUDA" class="form-label"><i class="fas fa-check-circle" style="color: rgb(39, 58, 93);"></i> Seleccione el Estado de la deuda</label>
                            @Html.DropDownListFor(model => model.ID_ESTADO_DEUDA, null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="mb-3">
                            <label for="selectRubrosCobros" class="form-label" style="display: flex; align-items: center;"><i class="fas fa-money-bill-wave" style="color: rgb(39, 58, 93); margin-right: 7px;"></i>Seleccionar rubros de cobro</label>
                            @Html.DropDownList("selectRubrosCobros", (MultiSelectList)ViewBag.ID_RUBRO_COBRO, htmlAttributes: new { @class = "form-control", multiple = "multiple" })
                        </div>
                        <div class="mb-3">
                            <label for="NOMBRE_PLAN" class="form-label"><i class="fas fa-pencil-alt" style="color: rgb(39, 58, 93);"></i>Ingresa el nombre de tu plan</label>
                            @Html.EditorFor(model => model.NOMBRE_PLAN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NOMBRE_PLAN, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <label for="DESCRIPCION" class="form-label"><i class="fas fa-file-alt" style="color: rgb(39, 58, 93);"></i> Descripción</label>
                            @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                          
                            @Html.HiddenFor(model => model.ID_PLAN_COBRO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ID_PLAN_COBRO, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="mb-3">
            <label for="FECHA_INICIO" class="form-label"><i class="fas fa-calendar-alt" style="color: rgb(39, 58, 93);"></i>Fecha de inicio del plan</label>
            @Html.EditorFor(model => model.FECHA_INICIO, new { htmlAttributes = new { @class = "form-control p-2", style = "border-radius: 0.25rem" } })
            @Html.ValidationMessageFor(model => model.FECHA_INICIO, "", new { @class = "text-danger" })
        </div>*@

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
                            <a href="@Url.Action("IndexAdmin", "PlanCobro")" class="btn btn-danger"><i class="fas fa-times"></i> Cancelar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>