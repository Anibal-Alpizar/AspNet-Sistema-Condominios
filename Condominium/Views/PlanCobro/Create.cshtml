@model Infraestructure.Model.GESTION_PLANES_COBRO

@{
    ViewBag.Title = "Crear Plan de cobro";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-9">
            <h2 class="text-center mb-4">Crear Plan de cobro</h2>
            @using (Html.BeginForm("Save", "PlanCobro", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <div class="card">
                            <div class="card-body col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="ID_USUARIO">
                                                <i class="fas fa-user" style="color: rgb(39, 58, 93);"></i>
                                                Seleccione el usuario
                                            </label>
                                            @Html.DropDownListFor(model => model.ID_USUARIO, (SelectList)ViewBag.idResidente, "Seleccione Usuario", new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            <label for="@Html.IdFor(model => model.ID_ESTADO_DEUDA)">
                                                <i class="fas fa-info-circle" style="color: rgb(39, 58, 93);"></i> Estado de deuda:
                                            </label>
                                            @Html.DropDownListFor(model => model.ID_ESTADO_DEUDA, (SelectList)ViewBag.idEstadoDeuda, "Seleccione Estado", new { @class = "form-control" })
                                        </div>

                                        <div class="form-group">
                                            <label style="color: rgb(39, 58, 93); font-size: 16px;"><i class="fas fa-tags" style="color: rgb(39, 58, 93);"></i> Rubros de Cobro</label>
                                            @Html.DropDownList("selectRubrosCobros", (MultiSelectList)ViewBag.idRubroCobro, new { @class = "form-control", multiple = "multiple" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="@Html.IdFor(model => model.NOMBRE_PLAN)">
                                                <i class="fas fa-file-alt" style="color: rgb(39, 58, 93);"></i> Nombre del plan:
                                            </label>
                                            @Html.EditorFor(model => model.NOMBRE_PLAN, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.NOMBRE_PLAN, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <label for="@Html.IdFor(model => model.DESCRIPCION)">
                                                <i class="fas fa-info-circle" style="color: rgb(39, 58, 93);"></i> Descripción:
                                            </label>
                                            @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group">
                                            <label for="@Html.IdFor(model => model.ID_PLAN_COBRO)">
                                                <i class="fas fa-info-circle" style="color: rgb(39, 58, 93);"></i> Plan de cobro:
                                            </label>
                                            @Html.EditorFor(model => model.ID_PLAN_COBRO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ID_PLAN_COBRO, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group text-center mt-3">
                                        <div class="btn-group" role="group">
                                            <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Crear</button>
                                            <a href="@Url.Action("IndexAdmin", "PlanCobro")" class="btn btn-danger"><i class="fas fa-times"></i> Cancelar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>