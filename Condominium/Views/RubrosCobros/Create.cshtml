@model Infraestructure.Model.RUBRO_COBRO

@{
    ViewBag.Title = "Crear Rubro de Cobro";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-4">Crear Rubro</h2>
            @using (Html.BeginForm("Save", "RubrosCobros", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @*<div class="form-floating mb-3">
                @Html.EditorFor(model => model.ID_RUBRO_COBRO, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
