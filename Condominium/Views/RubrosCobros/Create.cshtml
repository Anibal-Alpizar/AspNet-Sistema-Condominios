            </div>*@
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.NOMBRE_RUBRO, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    <label for="NOMBRE_RUBRO">Nombre Rubro</label>
                    <div class="invalid-feedback">
                        Por favor, ingrese un nombre de rubro.
                    </div>
                </div>

                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.MONTO, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    <label for="MONTO">Monto</label>
                    <div class="invalid-feedback">
                        Por favor, ingrese un monto.
                    </div>
                </div>

                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    <label for="DESCRIPCION">Descripción</label>
                    <div class="invalid-feedback">
                        Por favor, ingrese una descripción.
                    </div>
                </div>
                <div>
                    <label for="image-file" class="form-label">Selecciona una imagen:</label>
                    <input type="file" id="image-file" name="ImageFile" class="form-control" required />
                    <div class="form-text">Formatos permitidos: JPG, PNG, GIF.</div>
                </div>
                <div class="row justify-content-center my-3">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <a href="@Url.Action("IndexAdmin")" class="btn btn-secondary w-100">Regresar al listado</a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary w-100">Crear</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

