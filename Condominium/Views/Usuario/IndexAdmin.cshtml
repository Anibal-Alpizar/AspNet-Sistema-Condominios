@model IEnumerable<Infraestructure.Model.USUARIO>

@{
    ViewBag.Title = "IndexAdmin";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Usuarios</h2>
    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Crear Usuarios
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>

                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Estado</th>
                <th>Tipo Usuario</th>
           </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NOMBRE)</td>
                    <td>@Html.DisplayFor(modelItem => item.APELLIDO)</td>
                    <td>@Html.DisplayFor(modelItem => item.CORREO)</td>
                    <td>@Html.DisplayFor(modelItem => item.ESTADO_USUARIO.ESTADO)</td>
                    <td>@Html.DisplayFor(modelItem => item.TIPO_USUARIO.TIPO_USUARIO1)</td>

                    <td>
                        <div class="d-flex justify-content-center mb-3">
                            <a href="@Url.Action("EditAdmin", "Usuario", new { id = item.ID_USUARIO })" class="btn @(item.ID_ESTADO == 1 ? "btn-success" : "btn-warning") btn-sm">
                                <i class="fas @(item.ID_ESTADO == 1 ? "fa-check-circle" : "fa-undo-alt") me-2"></i>@(item.ID_ESTADO == 1 ? "Desactivar Usuario" : "Activar Usuario")
                            </a>
                            <a href="@Url.Action("Edit", "Usuario", new { id = item.ID_USUARIO })" class="btn btn-primary btn-sm mx-1"><i class="fas fa-pencil-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>